<div class="content-container">
  <div class="content">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-input" %>
        <%= f.hidden_field :document_id, value: params[:document_id] if params[:document_id].present? %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "text-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "submit-button" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
    <br>
    <div class="user-links">
      <% if params[:controller] == "devise/sessions" %>
        <%= link_to "Not a User yet? Create your Free Account Here", new_user_registration_path, class: 'user-link' %>
      <% else %>
        <%= link_to "Already a User? Sign in Here", new_user_session_path, class: 'user-link' %>
      <% end %>
    </div>
  </div>
</div>
