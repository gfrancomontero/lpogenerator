<div class="content-container">
  <div class="content">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-input" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "text-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "submit-button" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
<div class="user-links">
      <% if params[:controller] == "devise/sessions" %>
        <%= link_to "Not a User yet? Create your Free Account Here", new_user_registration_path, class: 'user-link' %>
      <% else %>
        <%= link_to "Already a User? Sign in Here", new_user_session_path, class: 'user-link' %>
      <% end %>
    </div>
  </div>
</div>
